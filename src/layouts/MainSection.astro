---
import { Image } from 'astro:assets';

import Button from '../components/Button.astro';

import Placeholder from '../assets/images/placeholder.png';
import Download from '../assets/images/download.svg';
import QR from '../assets/images/qr.svg';
---

<section class="flex items-center gap-5 flex-col bg-white rounded-lg shadow-lg max-w-lg mx-auto" transition:persist>

  <article class="flex flex-col gap-5">
    <output class="p-8 border-b border-gray-200">
      <h2 id="title" class="text-xl xl:font-extrabold tracking-tight leading-10 xl:text-4xl text-slate-900">
      </h2>
      <div>
        <p id="info-1" class="text-sm xl:text-lg font-semibold text-slate-900"></p>
      </div>
      <div>
        <p id="info-2" class="text-sm xl:text-lg font-semibold text-slate-900"></p>
      </div>
    </output>

    <footer class="flex flex-col text-center text-sm px-8">
      <p>Scan the QR code to claim </p>
      <figure>
        <Image src={Placeholder} class="max-h-96 max-w-96 h-auto w-auto" id="qr-code" alt="qr-code" />
      </figure>
      <p>
        or claim with a wallet on this device <a class="font-extrabold underline" id="link-direct" href="">here</a>.
      </p>
    </footer>
  </article>
  <div class="border-t border-gray-200 w-full">
    <img src="/brand/logo.png" style="max-width: 150px" class="my-4 mx-auto" alt="Brand logo" />
  </div>
</section>
